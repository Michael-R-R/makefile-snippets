
INC=-I<add include paths here>
LIB=-L<add library paths here>
CPP=g++
CPPFLAGS=-Wall -std=c++17 $(INC) $(LIB)
SOURCES=$(shell find . -name "*.cpp")
OBJECTS=$(SOURCES:%.cpp=%.o)
TARGET=output

.PHONY: all
all: $(TARGET)

$(TARGET): $(OBJECTS)
	$(LINK.cpp) $^ -o $@ -<add lib linking commands here>

.PHONY: clean
clean:
	rm -f $(TARGET) $(OBJECTS)
